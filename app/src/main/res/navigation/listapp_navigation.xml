<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/listapp_navigation"
    app:startDestination="@id/list">

    <fragment
        android:id="@+id/list"
        android:name="id.ac.ui.cs.mobileprogramming.darinamanda.helloworld.view.List"
        android:label="List">
        <action
            android:id="@+id/action_list_to_detail"
            app:destination="@id/detail"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/detail"
        android:name="id.ac.ui.cs.mobileprogramming.darinamanda.helloworld.view.Detail"
        android:label="Detail">
        <action
            android:id="@+id/action_detail_to_list"
            app:destination="@id/list"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
        <argument
            android:name="id"
            android:defaultValue="0"
            app:argType="integer" />
    </fragment>
</navigation>